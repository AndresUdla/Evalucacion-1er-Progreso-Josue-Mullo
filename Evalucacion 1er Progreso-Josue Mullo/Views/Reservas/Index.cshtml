@model IEnumerable<Evaluacion_1er_Progreso_Josue_Mullo.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<h1>Lista de Reservas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ReservaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FechaReservaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FechaReservaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ValorPagar)
            </th>
            <th>
                Cliente
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReservaEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReservaSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorPagar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.ReservaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
