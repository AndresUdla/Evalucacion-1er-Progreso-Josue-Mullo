@model Evaluacion_1er_Progreso_Josue_Mullo.Models.Reserva

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FechaReservaEntrada" class="control-label"></label>
                <input asp-for="FechaReservaEntrada" class="form-control" />
                <span asp-validation-for="FechaReservaEntrada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaReservaSalida" class="control-label"></label>
                <input asp-for="FechaReservaSalida" class="form-control" />
                <span asp-validation-for="FechaReservaSalida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorPagar" class="control-label"></label>
                <input asp-for="ValorPagar" class="form-control" />
                <span asp-validation-for="ValorPagar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
