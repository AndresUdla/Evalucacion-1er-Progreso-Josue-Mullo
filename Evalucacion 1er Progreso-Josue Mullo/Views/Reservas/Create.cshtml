@model Evalucacion_1er_Progreso_Josue_Mullo.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaReservaEntrada" class="control-label"></label>
                <input asp-for="FechaReservaEntrada" class="form-control" />
                <span asp-validation-for="FechaReservaEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaReservaSalida" class="control-label"></label>
                <input asp-for="FechaReservaSalida" class="form-control" />
                <span asp-validation-for="FechaReservaSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorReserva" class="control-label"></label>
                <input asp-for="ValorReserva" class="form-control" />
                <span asp-validation-for="ValorReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
